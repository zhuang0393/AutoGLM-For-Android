<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark with Blue Accent -->
    <!-- Using Theme.Material for system build compatibility -->
    <style name="Base.Theme.AutoGLM" parent="android:Theme.Material.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_variant</item>
        <item name="android:colorAccent">@color/secondary</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>

        <!-- Immersive status bar and navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Theme.AutoGLM" parent="Base.Theme.AutoGLM" />

    <!-- Voice Recording Dialog Theme -->
    <style name="VoiceRecordingDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/VoiceDialogAnimation</item>
    </style>

    <style name="VoiceDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Transparent theme for utility activities -->
    <style name="Theme.Transparent" parent="Theme.AutoGLM">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Base Widget style -->
    <style name="Widget">
        <!-- Base widget style -->
    </style>

    <!-- Base Widget.App style -->
    <style name="Widget.App" parent="Widget">
        <!-- Base widget style for app -->
    </style>

    <!-- Card Style - CardView attributes removed for system build compatibility -->
    <style name="Widget.App.CardView" parent="Widget.App">
        <!-- CardView attributes will be set programmatically or via layout XML -->
    </style>

    <!-- Primary Button Style - Filled with blue -->
    <style name="Widget.App.Button.Primary" parent="android:Widget.Material.Button">
        <item name="android:background">@color/button_primary</item>
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Secondary Button Style - Outlined -->
    <style name="Widget.App.Button.Secondary" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Text Button Style -->
    <style name="Widget.App.Button.Text" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Tonal Button Style -->
    <style name="Widget.App.Button.Tonal" parent="android:Widget.Material.Button">
        <item name="android:background">@color/surface_variant</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Tonal Button Style - Large (for card buttons) -->
    <style name="Widget.App.Button.Tonal.Large" parent="Widget.App.Button.Tonal">
        <item name="android:textSize">16sp</item>
        <!-- iconSize removed - not a standard Android attribute -->
    </style>

    <!-- Input Field Style -->
    <style name="Widget.App.TextInputLayout">
        <item name="android:textColorHint">@color/primary</item>
        <item name="android:background">@color/input_background</item>
    </style>

    <!-- Base Text Appearance -->
    <style name="TextAppearance.App" parent="android:TextAppearance.Material">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Section Title Style -->
    <style name="TextAppearance.App.SectionTitle" parent="TextAppearance.App">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Card Title Style -->
    <style name="TextAppearance.App.CardTitle" parent="TextAppearance.App">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- List Item Title -->
    <style name="TextAppearance.App.ListTitle" parent="TextAppearance.App">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- List Item Subtitle -->
    <style name="TextAppearance.App.ListSubtitle" parent="TextAppearance.App">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- MaterialSwitch Style - Better visibility for unchecked state -->
    <style name="Widget.App.Switch" parent="android:Widget.Material.CompoundButton.Switch">
        <item name="android:thumb">@color/switch_thumb_color</item>
        <item name="android:track">@color/switch_track_color</item>
    </style>
</resources>
