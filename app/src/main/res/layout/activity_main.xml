<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Simple Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium" />

        <ImageButton
            android:id="@+id/floatingWindowBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/floating_open"
            android:src="@drawable/ic_layers"
            android:tint="@color/icon_secondary" />

        <ImageButton
            android:id="@+id/settingsBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings_title"
            android:src="@drawable/ic_settings"
            android:tint="@color/icon_secondary" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="40dp">

            <!-- Shizuku Status Card -->
            <FrameLayout
                android:id="@+id/shizukuStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Status Icon -->
                        <ImageView
                            android:id="@+id/shizukuStatusIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_check_circle"
                            android:tint="@color/icon_primary"
                            android:contentDescription="Status" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/statusTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shizuku_status_title"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/statusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/shizuku_status_unknown"
                                android:textColor="@color/text_secondary"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <!-- Hidden indicator for code compatibility -->
                        <View
                            android:id="@+id/shizukuStatusIndicator"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            android:background="@drawable/status_indicator_background" />

                    </LinearLayout>

                    <!-- Shizuku Buttons Row -->
                    <LinearLayout
                        android:id="@+id/shizukuButtonsRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <!-- Open Shizuku Button -->
                        <Button
                            android:id="@+id/openShizukuBtn"
                            style="@style/Widget.App.Button.Tonal.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone"
                            android:text="@string/open_shizuku"
                            android:drawableStart="@drawable/ic_play"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical|start" />

                        <!-- Request Permission Button -->
                        <Button
                            android:id="@+id/requestPermissionBtn"
                            style="@style/Widget.App.Button.Tonal.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:text="@string/request_shizuku_permission"
                            android:drawableStart="@drawable/ic_link"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical|start" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Task Input Card -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_edit"
                            android:tint="@color/icon_primary"
                            android:contentDescription="Task" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:text="@string/task_section_label"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp" />

                        <ImageButton
                            android:id="@+id/btnVoiceInput"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/voice_input_title"
                            android:src="@drawable/ic_mic"
                            android:tint="@color/icon_secondary" />

                        <ImageButton
                            android:id="@+id/btnSelectTemplate"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/task_select_template"
                            android:src="@drawable/ic_list"
                            android:tint="@color/icon_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/taskInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/surface_variant"
                        android:padding="16dp"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/taskInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:maxLines="6"
                            android:minLines="4"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp"
                            android:lineSpacingExtra="5dp" />

                    </LinearLayout>

                    <!-- Start Button inside card -->
                    <Button
                        android:id="@+id/startTaskBtn"
                        style="@style/Widget.App.Button.Tonal.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_marginTop="20dp"
                        android:enabled="false"
                        android:text="@string/start_task"
                        android:textSize="22sp"
                        android:drawableStart="@drawable/ic_play"
                        android:drawablePadding="12dp"
                        android:paddingHorizontal="32dp"
                        android:gravity="center_vertical|start" />

                </LinearLayout>

            </FrameLayout>

            <!-- Running Section - shown when task is running -->
            <LinearLayout
                android:id="@+id/runningSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Task Status Card -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Status Icon -->
                        <ImageView
                            android:id="@+id/taskStatusIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_status"
                            android:tint="@color/icon_primary"
                            android:contentDescription="Task Status" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/taskStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/task_status_idle"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/stepCounterText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/step_counter_default"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Hidden indicator for code compatibility -->
                        <View
                            android:id="@+id/taskStatusIndicator"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            android:background="@drawable/status_indicator_background" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Cancel Button -->
                <Button
                    android:id="@+id/cancelTaskBtn"
                    style="@style/Widget.App.Button.Tonal.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                        android:enabled="false"
                        android:text="@string/cancel_task"
                        android:textSize="22sp"
                        android:drawableStart="@drawable/ic_stop"
                        android:drawablePadding="12dp"
                        android:paddingHorizontal="32dp"
                        android:gravity="center_vertical|start" />

            </LinearLayout>

            <!-- Recent History Section -->
            <LinearLayout
                android:id="@+id/recentHistorySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="最近任务"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:id="@+id/recentHistoryList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Demo Suggestions Section -->
            <LinearLayout
                android:id="@+id/demoSuggestionsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="示例任务"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:id="@+id/demoSuggestionsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
