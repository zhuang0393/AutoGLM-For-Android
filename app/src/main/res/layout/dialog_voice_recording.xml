<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_dialog_rounded"
    android:minHeight="280dp">

    <ImageView
        android:id="@+id/ivMicIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_mic"
        android:tint="@color/primary"
        android:contentDescription="@string/voice_input_title" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/voice_recording_hint"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold" />

    <!-- 波形图（仅录音时显示） -->
    <com.kevinluo.autoglm.voice.VoiceWaveformView
        android:id="@+id/waveformView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:visibility="visible" />

    <!-- 加载动画（仅识别中显示） -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="48dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- 识别结果文字（仅结果时显示） -->
    <TextView
        android:id="@+id/tvResultText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        android:maxLines="3"
        android:ellipsize="end"
        android:visibility="gone" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLeft"
            style="@style/Widget.App.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btnRight"
            style="@style/Widget.App.Button.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/voice_confirm" />

    </LinearLayout>

</LinearLayout>
