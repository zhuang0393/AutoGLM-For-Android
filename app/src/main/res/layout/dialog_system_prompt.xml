<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Warning -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/warning_background"
        android:padding="12dp"
        android:text="@string/settings_system_prompt_warning"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <!-- Prompt Input -->
    <LinearLayout
        android:id="@+id/promptInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface_variant"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_system_prompt_hint"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/promptInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLines="15"
            android:minLines="8"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <!-- Reset Button -->
    <Button
        android:id="@+id/btnResetPrompt"
        style="@style/Widget.App.Button.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/settings_system_prompt_reset"
        android:textColor="@color/status_error" />

</LinearLayout>
