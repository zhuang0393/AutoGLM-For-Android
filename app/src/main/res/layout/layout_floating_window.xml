<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/floating_window_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/floating_window_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header - Draggable -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/floating_window_header"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp">

            <!-- Status indicator dot -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_indicator_background" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/task_status_idle"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Step counter -->
            <TextView
                android:id="@+id/tv_step_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/step_counter_default"
                android:textColor="@color/text_secondary"
                android:textSize="11sp" />

            <!-- Open App button -->
            <ImageButton
                android:id="@+id/btn_open_app"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/floating_open_app"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_open_app"
                android:tint="@color/icon_tertiary" />

            <!-- Minimize button -->
            <ImageButton
                android:id="@+id/btn_minimize"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/floating_minimize"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_minus"
                android:tint="@color/icon_tertiary" />

            <!-- Close button -->
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/dialog_cancel"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close"
                android:tint="@color/icon_tertiary" />
        </LinearLayout>

        <!-- Task Input Area (shown when idle) -->
        <LinearLayout
            android:id="@+id/input_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/task_section_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/btn_select_template"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/task_select_template"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_list"
                    android:tint="@color/icon_secondary" />

            </LinearLayout>

            <EditText
                android:id="@+id/task_input"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:gravity="top|start"
                android:hint="@string/task_input_hint"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_start"
                style="@style/Widget.App.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="@string/start_task"
                android:textSize="13sp"
                android:drawableStart="@drawable/ic_play"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start" />

        </LinearLayout>

        <!-- Steps List - Waterfall Flow (shown when running) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/steps_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp"
            android:overScrollMode="never"
            android:visibility="gone" />

        <!-- Result Message -->
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface_variant"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Control buttons container (shown when running/paused) -->
        <LinearLayout
            android:id="@+id/control_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone">

            <!-- Pause/Resume button container - same position -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp">

                <!-- Pause button (shown when running) -->
                <Button
                    android:id="@+id/btn_pause"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/pause_task"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:backgroundTint="@color/status_waiting"
                    android:drawableStart="@drawable/ic_pause"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|start" />

                <!-- Resume button (shown when paused) -->
                <Button
                    android:id="@+id/btn_resume"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/resume_task"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:backgroundTint="@color/status_running"
                    android:drawableStart="@drawable/ic_play"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|start" />

            </FrameLayout>

            <!-- Stop button - always in same position -->
            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/cancel_task"
                android:textSize="12sp"
                android:visibility="visible"
                android:backgroundTint="@color/status_error"
                android:drawableStart="@drawable/ic_stop"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start" />

        </LinearLayout>

        <!-- New Task button (shown when completed/failed) -->
        <Button
            android:id="@+id/btn_new_task"
            style="@style/Widget.App.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:text="@string/floating_new_task"
            android:textSize="12sp"
            android:visibility="gone"
            android:drawableStart="@drawable/ic_plus"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start" />

    </LinearLayout>

</FrameLayout>
