<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night theme inherits from base (already dark) -->
    <!-- Using Theme.Material for system build compatibility -->
    <style name="Base.Theme.AutoGLM" parent="android:Theme.Material.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_variant</item>
        <item name="android:colorAccent">@color/secondary</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>

        <!-- Immersive status bar and navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
</resources>
